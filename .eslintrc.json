{
  "env": {
    "browser": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "array-bracket-spacing": [ "warn", "always" ],
    "arrow-body-style": [ "off" ],
    "arrow-parens": [ "error", "as-needed" ],
    "comma-dangle": [ "error", { "objects": "only-multiline",
                                 "arrays": "only-multiline",
                                 "functions": "never" } ],
    "indent": [ "error", 2, { "ObjectExpression": "first", "SwitchCase": 1 } ],
    "import/no-named-as-default": [ "off" ],
    "import/extensions": [ "error", { "js": "never", "jsx": "always" } ],
    "jsx-a11y/no-static-element-interactions": [ "off" ],
    "key-spacing": [ "error", { "mode": "minimum" } ],
    "linebreak-style": [ "off" ],
    "prefer-template": [ "off" ],
    "no-continue": [ "off" ],
    "no-console": [ "error", { "allow": ["assert", "warn", "error"] } ],
    "no-mixed-operators": [ "off" ],
    "no-multi-spaces": [ "off" ],
    "no-param-reassign": [ "off" ],
    "no-plusplus": [ "off" ],
    "no-prototype-builtins": [ "off" ],
    "no-restricted-syntax": [ "off" ],
    "no-restricted-properties": [ "off" ],
    "no-shadow": [ "off" ],
    "no-underscore-dangle": [ "off" ],
    "no-use-before-define": [ "error", { "functions": false } ],
    "react/prefer-stateless-function": [ "off" ],
    "react/jsx-closing-bracket-location": [
      "error", { "selfClosing": "after-props", "nonEmpty": "after-props" }
    ],
    "react/jsx-filename-extension": [ "off" ],
    "react/require-default-props": [ "off" ]
  }
}
